<%-include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/form.css" />
<link rel="stylesheet" href="/css/auth.css" />
<body>
  <%-include('../includes/navigation.ejs')%>
  <main>
    <% if (errorMessage) { %>
    <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <form class="login-form" action="/signup" method="post">
      <div class="form-control">
        <label class="form-control label">E-Mail</label>
        <input
          class="<%= validationErrors.find(error => error.path === 'email') ? 'invalid' : '' %>"
          type="email"
          name="email"
          id="email"
          value="<%=
        oldInput.email %>"
        />
      </div>

      <div class="form-control">
        <label class="form-control label" for="Password">Password</label>
        <input
          class="<%= validationErrors.find(error => error.path === 'Password') ? 'invalid' : '' %>"
          type="password"
          name="Password"
          id="Password"
          value="<%= oldInput.Password %>"
        />
      </div>
      <div class="form-control">
        <label class="form-control label" for="ConfirmPassword"
          >Confirm Password</label
        >
        <input
          class="<%= validationErrors.find(error => error.path === 'ConfirmPassword') ? 'invalid' : '' %>"
          type="password"
          name="ConfirmPassword"
          id="ConfirmPassword"
          value="<%= oldInput.ConfirmPassword %>"
        />
      </div>
      <button id="btn" type="submit">Signup</button>
    </form>
  </main>
</body>
